<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.youloft.lilith.ui.view.BaseToolBar
        android:id="@+id/btl_bind_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--内容部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282142"
        android:orientation="vertical">

        <!--绑定手机-->
        <RelativeLayout
            android:id="@+id/rl_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/slt_usercenter"
            android:clickable="true"
            android:paddingBottom="14.5dp"
            android:paddingTop="14dp">

            <ImageView
                android:id="@+id/flag1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/binding_phone_icon"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/bind_phone"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/flag1"
                android:layout_toEndOf="@+id/flag1"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_alignTop="@+id/flag5"
                android:layout_toLeftOf="@+id/flag5"
                android:layout_toStartOf="@+id/flag5"
                android:layout_marginRight="8dp" />

            <ImageView
                android:id="@+id/flag5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mine_more_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp" />
        </RelativeLayout>


        <!--绑定微信  绑定QQ  绑定微博-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#2f2a40"
            android:orientation="vertical">
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22ffffff" />

            <!--绑定微信-->
            <RelativeLayout
                android:id="@+id/rl_bind_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/slt_usercenter"
                android:clickable="true"
                android:paddingBottom="14.5dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/flag2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/binding_wechat_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="绑定微信"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_alignTop="@+id/flag2"
                    android:layout_toRightOf="@+id/flag2"
                    android:layout_toEndOf="@+id/flag2"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/tv_bind_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已绑定"
                    android:visibility="invisible"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_toLeftOf="@+id/imageView"
                    android:layout_toStartOf="@+id/imageView"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/mine_more_icon"
                    android:id="@+id/imageView" />
            </RelativeLayout>
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:background="#22ffffff" />
            <!--绑定QQ-->
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/slt_usercenter"
                android:clickable="true"
                android:paddingBottom="14.5dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/flag3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/binding_qq_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/flag3"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/flag3"
                    android:text="绑定QQ"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/mine_more_icon" />
            </RelativeLayout>
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:background="#22ffffff" />
            <!--绑定微博-->
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/slt_usercenter"
                android:clickable="true"
                android:paddingBottom="14.5dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/flag4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/binding_weibo_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/flag4"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/flag4"
                    android:text="绑定微博"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/mine_more_icon" />
            </RelativeLayout>
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22ffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>