<?xml version="1.0" encoding="utf-8"?>
<com.youloft.lilith.topic.widget.ScrollFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_top_root"
        android:background="@drawable/activity_point_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/close_icon"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command_num"
                android:text="666条回复"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

</com.youloft.lilith.topic.widget.ScrollFrameLayout>
