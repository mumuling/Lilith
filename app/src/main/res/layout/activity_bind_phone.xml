<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youloft.lilith.common.widgets.MyVideoView
        android:id="@+id/vv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--内容部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa1d051d"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="118dp"
            android:text="@string/bind_phone"
            android:textColor="@color/white"
            android:textSize="40dp" />
        <!--手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="42dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="0123456789"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_50"
                    android:textSize="20dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp">
                    <!--已注册账号-->
                    <TextView
                        android:id="@+id/tv_exist_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:text="@string/existing_number"
                        android:textColor="@color/existing_number_text_color"
                        android:textSize="14dp"
                        android:visibility="invisible" />

                    <!--手机没被注册时显示的钩钩-->
                    <ImageView
                        android:id="@+id/iv_number_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@drawable/login_right_icon"
                        android:visibility="invisible" />

                    <!--验证电话号码的时候转圈圈-->
                    <ImageView
                        android:id="@+id/iv_number_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@drawable/login_loading_icon"
                        android:visibility="invisible" />

                    <!--清除电话号码的叉叉-->
                    <ImageView
                        android:id="@+id/iv_clean_number"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:src="@drawable/login_password_delete_icon"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white_20" />


        </LinearLayout>
        <!--验证码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:hint="@string/input_validation_code"
                    android:inputType="number"
                    android:textColor="@color/translucent"
                    android:textColorHint="@color/white_50"
                    android:textSize="20dp" />

                <!--分割式验证码容器-->
                <LinearLayout
                    android:id="@+id/ll_code_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_code01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <View
                            android:id="@+id/v_code_line01"
                            android:layout_width="12dp"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:background="@color/white_50" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp">

                        <TextView
                            android:id="@+id/tv_code02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <View
                            android:id="@+id/v_code_line02"
                            android:layout_width="12dp"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:background="@color/white_50" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp">

                        <TextView
                            android:id="@+id/tv_code03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <View
                            android:id="@+id/v_code_line03"
                            android:layout_width="12dp"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:background="@color/white_50" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp">

                        <TextView
                            android:id="@+id/tv_code04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <View
                            android:id="@+id/v_code_line04"
                            android:layout_width="12dp"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:background="@color/white_50" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp">

                        <TextView
                            android:id="@+id/tv_code05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <View
                            android:id="@+id/v_code_line05"
                            android:layout_width="12dp"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:background="@color/white_50" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp">

                        <TextView
                            android:id="@+id/tv_code06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <View
                            android:id="@+id/v_code_line06"
                            android:layout_width="12dp"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:background="@color/white_50" />
                    </FrameLayout>
                    <!--显示验证码正确和错误-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp">

                        <ImageView
                            android:id="@+id/iv_code_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/login_right_icon"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_code_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/mine_tips_icon"
                            android:visibility="invisible" />
                    </FrameLayout>

                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_20" />
                <!--获取验证码和倒计时文字-->
                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/get_validation_code"
                    android:textColor="@color/white_50"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white_20" />

        <!--登录按钮-->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/slt_login_btn"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/confirm"
            android:textColor="@color/slt_login_text_color"
            android:textSize="17dp" />
    </LinearLayout>

    <!--返回按钮-->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="23dp"
        android:padding="10dp"
        android:src="@drawable/back_icon" />
</FrameLayout>