<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_comment_hot"
        android:text="热门评论"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_comment_user"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_user_name"
            android:text="孙利军"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_comment_user"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_to_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="hhh"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_toRightOf="@id/text_user_name"
            android:layout_marginLeft="7dp"
            android:drawableLeft="@drawable/topic_reply_icon"
            android:drawablePadding="7dp"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_user_name"
            android:layout_alignLeft="@id/text_user_name"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:id="@+id/image_user_sex"
                android:src="@drawable/topic_male_icon"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_user_constellation"
                android:layout_gravity="center_vertical"
                android:textColor="#80ffffff"
                android:text="双鱼座"
                android:textSize="13sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/image_zan"
            android:layout_alignParentRight="true"
            android:src="@drawable/topic_liking_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_zan_count"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/image_zan"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:text="6666"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_answer_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="相似的人应该会更容易相处吧。我和我女朋友就是这样，总有很多话题可以聊。"
        android:layout_marginTop="4dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:id="@+id/ll_reply"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_answer_time"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="4分钟前"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_reply"
            android:text="回复"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:drawableLeft="@drawable/point"
            android:drawablePadding="9dp"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="#1Affffff"
        android:layout_marginTop="15dp"/>

    </LinearLayout>