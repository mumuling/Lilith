<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <com.youloft.lilith.topic.widget.UserImageStackViewGroup
        android:id="@+id/cons_hot_topic_user_stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cons_hot_topic_user_stack"
        android:gravity="center"
        android:text="6666"
        android:textColor="@color/white_70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/constellation_more_icon"
        android:text="@string/topic_card_show_detail"
        android:textColor="@color/white_70" />

</RelativeLayout>
