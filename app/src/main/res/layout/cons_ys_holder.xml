<?xml version="1.0" encoding="utf-8"?>
<com.youloft.lilith.cons.card.ShadowCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/root"
        android:background="@color/cons_share_bg_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youloft.lilith.cons.view.LuckView
            android:id="@+id/cons_luck_view"
            android:layout_width="match_parent"
            android:layout_height="185dp" />

        <FrameLayout
            android:id="@+id/cons_luck_bg_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cons_luck_msg_bg">

            <TextView
                android:id="@+id/cons_luck_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="7dp"
                android:paddingTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/cons_luck_msg_no_data"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/cons_no_data_no_net"
                android:visibility="visible" />
        </FrameLayout>
    </LinearLayout>
</com.youloft.lilith.cons.card.ShadowCard>