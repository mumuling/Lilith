<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_other_topic"
        android:text="其他话题"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/item_topic_box">
    <com.youloft.lilith.common.widgets.view.RoundImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_topic_bg"
        app:radius="5dp"
        android:scaleType="centerCrop"/>
        <com.youloft.lilith.common.widgets.view.RoundImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            app:radius="5dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic_content"
        android:text="#电话等级划分和技术开发和价格的守空房几点开始几号放假的"
        android:maxLines="2"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="23dp"/>
    <com.youloft.lilith.topic.widget.TopicUserImageLayout
        android:id="@+id/layout_user_image"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="23dp"
        />
    </FrameLayout>
</LinearLayout>
